<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MyAvaloniaApp.MainWindow"
        Width="800" Height="450"
        Title="MyAvaloniaApp">

    <DockPanel>
        <!-- UI knoppen -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
            <Button Content="Save" Click="OnSaveClicked" Width="80"/>
            <Button Content="Export To .svg" Click="OnExportSvgClicked" Width="140"/>
            <Button Content="Load" Click="OnLoadClicked" Width="80"/>
            <Button Content="Spawn Circle" Click="OnSpawnCircleClicked" Width="120" Margin="10,0,0,0"/>
            <Button Content="Spawn Rectangle" Click="OnSpawnRectangleClicked" Width="140" Margin="10,0,0,0"/>
            <Button Content="Spawn Polygon" Click="OnSpawnPolygonClicked" Width="130" Margin="10,0,0,0"/>
            <Button Content="Undo" Click="OnUndoClicked" Width="80" Margin="10,0,0,0"/>
            <Button Content="Redo" Click="OnRedoClicked" Width="80"/>
        </StackPanel>

        <Canvas x:Name="DrawingCanvas"
                Background="White"
                PointerPressed="OnPointerPressed"
                PointerReleased="OnPointerReleased"
                PointerMoved="OnPointerMoved"
                PointerWheelChanged="OnPointerWheelChanged"/>

    </DockPanel>

</Window>